language = "python"
code = """
import os
import streamlit as st

def get_api_key():
    """è·å–APIå¯†é’¥ï¼Œä¼˜å…ˆä»Streamlit Secretsè·å–ï¼Œç„¶åä»ç¯å¢ƒå˜é‡è·å–"""
    # å°è¯•ä» Streamlit Secrets è·å–
    try:
        return st.secrets["deepseek_api_key"]
    except:
